<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReplyMapper">
    <select id="selectList" parameterType="int" resultType="ReplyDTO">
        SELECT * FROM reply
        INNER JOIN hotel
        ON hotel.id = reply.hotelId
        INNER JOIN user
        ON user.id = reply.customerId
        ORDER BY reply.id DESC
    </select>

